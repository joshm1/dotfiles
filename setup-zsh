#!/bin/bash

[ -z "$DOTFILES" ] && source ./utils.sh

# set zsh as default shell
if [[ $SHELL = *zsh ]]; then
  echo "zsh is already the default shell."
else
  echo "Setting zsh as default shell..."
  sudo sh -c "echo $(which zsh) >> /etc/shells"
  chsh -s $(which zsh)
fi

# antigen.zsh stays in zsh/ since it's a third-party tool, not a dotfile
symlink $DOTFILES/zsh/antigen.zsh $HOME/.antigen.zsh

# Note: .zshrc, .p10k.zsh, .wezterm.lua, and .fdignore are now symlinked
# automatically via symlink_home_files() in the main setup script
